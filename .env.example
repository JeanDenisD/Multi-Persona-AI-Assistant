# NetworkChuck AI Chatbot Assistant - Environment Variables Template
# =================================================================
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env to git - it contains sensitive information

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Pinecone Configuration  
PINECONE_API_KEY=pc-your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=networkchuck-assistant

# Application Settings
APP_NAME=NetworkChuck AI Assistant
APP_VERSION=1.0.0
DEBUG=True

# Gradio Configuration
GRADIO_PORT=7860
GRADIO_SHARE=False

# LangChain Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=4000

# Vector Database Settings
VECTOR_DIMENSION=1536
TOP_K_RESULTS=5

# YouTube Settings (for transcript extraction - no API key needed)
MAX_TRANSCRIPT_LENGTH=10000
TRANSCRIPT_LANGUAGE=en